        <button id="fetchIssuesBtn">Binciko Users Masu Matsalar Gas (BNB Fee)</button>

        <div id="status-message" style="display:none;"></div>
        <div class="loading" id="loader"></div>

        <div class="results-card">
            <h2>Users Masu Token Amma Babu Gas (BNB)</h2>
            <table id="issuesTable">
                <thead>
                    <tr>
                        <th>UID/CoinPayID</th>
                        <th>Address</th>
                        <th>Coin</th>
                        <th>Token Balance ($)</th>
                        <th>BNB Balance</th>
                        <th>BNB Needed (Approx)</th>
                        <th>Issue</th>
                    </tr>
                </thead>
                <tbody id="issuesBody">
                    <tr><td colspan="7" class="no-data">Danna button sama domin bincikawa.</td></tr>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        document.getElementById('fetchIssuesBtn').addEventListener('click', fetchGasIssues);

        async function fetchGasIssues() {
            const btn = document.getElementById('fetchIssuesBtn');
            const statusDiv = document.getElementById('status-message');
            const loader = document.getElementById('loader');
            const issuesBody = document.getElementById('issuesBody');

            btn.disabled = true;
            loader.style.display = 'block';
            statusDiv.style.display = 'none';
            issuesBody.innerHTML = '<tr><td colspan="7" class="no-data">Bincike yana gudana...</td></tr>';

            const API_URL = 'https://bonus-gamma.vercel.app/gasManager';
            const API_KEY = '@haruna66'; 

            try {
                const response = await fetch(API_URL, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'x-api-key': API_KEY 
                    },
                    body: JSON.stringify({ action: 'getGasIssues' }) // Sabon yanayi na request 
                });

                const data = await response.json();

                if (!response.ok || !data.success) {
                    throw new Error(data.error || 'Request failed with unknown error.');
                }

                displayGasIssues(data.gasIssues);
                statusDiv.innerText = `An gano users masu matsalar gas guda ${data.gasIssues.length}.`;
                statusDiv.style.backgroundColor = data.gasIssues.length > 0 ? '#fef3c7' : '#d1fae5'; 
                statusDiv.style.color = data.gasIssues.length > 0 ? '#b45309' : '#065f46';
                statusDiv.style.display = 'block';

            } catch (error) {
                console.error('Error fetching gas issues:', error);
                issuesBody.innerHTML = '<tr><td colspan="7" class="no-data" style="color:red;">Error: ' + error.message + '</td></tr>';
                statusDiv.innerText = `Kuskure: ${error.message}`;
                statusDiv.style.backgroundColor = '#fee2e2'; 
                statusDiv.style.color = '#991b1b';
                statusDiv.style.display = 'block';
            } finally {
                btn.disabled = false;
                loader.style.display = 'none';
            }
        }

        function displayGasIssues(issues) {
            const issuesBody = document.getElementById('issuesBody');
            issuesBody.innerHTML = ''; 

            if (issues.length === 0) {
                issuesBody.innerHTML = '<tr><td colspan="7" class="no-data">Ba a gano user masu matsalar gas ba. Dukkan user suna da isasshen fee.</td></tr>';
                return;
            }

            issues.forEach(issue => {
                const row = issuesBody.insertRow();
                row.insertCell().textContent = issue.uid.substring(0, 8) + '...' + (issue.userCoinpayid ? ` (${issue.userCoinpayid})` : '');
                row.insertCell().textContent = issue.walletAddress.substring(0, 10) + '...';
                row.insertCell().textContent = issue.coin;
                row.insertCell().textContent = `$${parseFloat(issue.tokenBalance).toFixed(4)}`; 
                row.insertCell().textContent = `${parseFloat(issue.bnbBalance).toFixed(6)} BNB`;
                row.insertCell().textContent = `${parseFloat(issue.gasNeeded).toFixed(6)} BNB`;
                row.insertCell().innerHTML = `<span class="issue">${issue.issue}</span>`;
            });
        }
    </script>
